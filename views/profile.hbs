        </div>
		    <div class="form-group">
            <input type="tel" class="form-control" name="phone" value="{{user.phone}}">
        </div>
            <!-- Styled Radio Buttons as Toggle Buttons -->
        <div class="btn-group" role="group" aria-label="Role Selection">
            <input type="hidden" name="role" id="roleInput" value="{{user.role}}">
            <button type="button" class="btn btn-outline-light role-btn" data-role="Student">Student</button>
            <button type="button" class="btn btn-outline-light role-btn" data-role="Tutor">Tutor</button>
        </div>
    <div class="form-group">
        <label for="subjects">Subjects:</label>
        <select multiple class="form-control" name="subjects[]" id="subjects">
            <option value="Algebra 1">Algebra 1</option>
            <option value="Geometry">Geometry</option>
            <option value="Algebra 2">Algebra 2</option>
            <option value="Pre-Calculus">Pre-Calculus</option>
            <option value="AP Calculus AB">AP Calculus AB</option>
            <option value="AP Calculus BC">AP Calculus BC</option>
            <option value="AP Biology">AP Biology</option>
            <option value="AP Chemistry">AP Chemistry</option>
