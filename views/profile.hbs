  <body class="text-center">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="masthead mb-auto">
        <div class="inner">
          <h3 class="masthead-brand">Twutor</h3>
          <nav class="nav nav-masthead justify-content-center">
            <a class="nav-link active" href="#">Home</a>
            <a class="nav-link" href="#">About</a>
            <a class="nav-link" href="/logout">Logout</a>
          </nav>
        </div>
      </header>

    <form action="/update-user" method="POST">
		<h1>Edit Profile</h1>
		<p class="hint-text">Enter information to help you connect with others!</p>
        <div class="form-group">
            <h4>{{user.first_name}} {{user.last_name}}</h4>  
            <h5>{{user.email}}</h5>	
        </div>
		<div class="form-group">
            <input type="tel" class="form-control" name="phone" placeholder="Phone number">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="subjects" placeholder="Subjects" required="required">
        </div>     
        <p class="hint-text">Separate subjects by space (ex: "algebra1 physics english11 apush")</p>     
		<div class="form-group">
            <button type="submit" class="btn btn-success btn-lg btn-block">Submit</button>
        </div>
    </form>

      <footer class="mastfoot mt-auto">
        <div class="inner">
          <p>Twutor, created by Timmy Vu, TJHSST '20</p>
        </div>
      </footer>
    </div>


