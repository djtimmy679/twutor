  <script>
document.addEventListener('DOMContentLoaded', function () {
    const roleInput = document.getElementById('roleInput');
    const buttons = document.querySelectorAll('.role-btn');

    // Highlight the button based on the current value
    buttons.forEach(button => {
        button.classList.toggle('btn-light', button.dataset.role === roleInput.value);
        button.classList.toggle('btn-outline-light', button.dataset.role !== roleInput.value);
    });

    // Set up click event listeners for each button
    buttons.forEach(button => {
        button.addEventListener('click', function () {
            // Update the hidden input's value
            roleInput.value = this.dataset.role;
            // Update button styles to reflect the current selection
            buttons.forEach(btn => {
                btn.classList.toggle('btn-light', btn === this);
                btn.classList.toggle('btn-outline-light', btn !== this);
            });
        });
    });
});
</script>
