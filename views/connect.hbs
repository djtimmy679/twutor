<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta viewport="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Twutor Connect</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.7/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="cover.css" rel="stylesheet">
</head>
<body class="text-center center">
  <nav class="navbar navbar-expand-lg navbar-light">
      <a class="navbar-brand" href="#">Twutor</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <ul class="navbar-nav">
              <li class="nav-item active">
                  <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="/profile">Edit Profile</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="/logout">Log Out</a>
              </li>
          </ul>
      </div>
  </nav>
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <!-- Content for "Connect" Page -->
    <main role="main" class="inner cover">
        <h1 class="cover-heading">Your Matches</h1>
        {{#each matches}}
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">{{firstName}} {{lastName}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{role}}</h6>
                <p class="card-text">
                  {{#each subjects}}
                    <span class="badge badge-light d-inline-flex align-items-center mr-2 mt-2 custom-badge">{{this}}</span>
                  {{/each}}
                </p>
                <a href="tel:{{phone}}" class="card-link">Call</a>
                <a href="mailto:{{email}}" class="card-link">Email</a>
            </div>
        </div>
        {{/each}}
    </main>
</div>

<!-- Bootstrap and jQuery Script Tags -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.7/js/bootstrap.min.js"></script>
</body>
</html>
<style>
  .custom-badge {
    display: inline-flex !important; /* Ensure it overrides any other display settings */
    border: 1px solid #6c757d; /* Bootstrap's secondary color border */
    align-items: center;
    justify-content: center;
  }
</style>