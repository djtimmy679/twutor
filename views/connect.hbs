    <link rel="icon" href="/docs/4.1/assets/img/favicons/favicon.ico">

    <title>Twutor</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.1/examples/cover/">

    <!-- Bootstrap core CSS -->
    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="cover.css" rel="stylesheet">
  </head>

  <body class="text-center center">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="masthead mb-auto">
        <div class="inner">
          <h3 class="masthead-brand">Twutor</h3>
          <nav class="nav nav-masthead justify-content-center">
            <a class="nav-link active" href="userPortal">Home</a>
            <a class="nav-link" href="/profile">About Me</a>
            <a class="nav-link" href="/logout">Logout</a>
          </nav>
        </div>
      </header>
    <h1>You have {{matches.length}} matches</h1>  
    {{#each matches}}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{firstName}} {{lastName}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{ role }}</h6>
                <p class="card-text">Their subjects are {{#each subjects}}
                  {{this}}{{#unless @last}}, {{/unless}}
                {{/each}}  </p>  
                <a href="tel:{{phone}}" class="card-link">Phone</a>
                <a href="mailto:{{email}}" class="card-link">Email</a>
            </div>
        </div>
        <br/>
    {{/each}}
      <footer class="mastfoot mt-auto">
        <div class="inner">
          <p>Twutor, created by Timmy Vu, TJHSST '20</p>
        </div>
      </footer>
    </div>


    <!-- Bootstrap core JavaScript
    ================================================== -->
